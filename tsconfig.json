{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2022",
    "lib": ["es2022"],
    "declaration": true,
    "sourceMap": false,
    "strict": true,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "baseUrl": "./src",
    "noErrorTruncation": true,
    "paths": {
      "@tarasare/*": ["packages/*/src"]
    },
    "outDir": "./dist",
    "rootDir": "./src",
  },
  "exclude": [
    "**/node_modules",
    "**/dist"
  ],
  "include": [
    "src/**/*.ts"
  ]
}